// Learn more about this file in the docs: https://pris.ly/d/prisma-schema
datasource db {
  provider = "postgresql"
  url = "postgresql://postgres:postgres@localhost/todos"
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

model Todo {
  uid String @id @default(cuid())
  created_at DateTime
  text String
  done Boolean
}