datasource db {
  provider = "postgresql"
  url = "postgresql://postgres:postgres@192.168.1.111/todos"
  
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

model Todo {
  uid String @id @default(cuid())
  created_at DateTime
  text String
  done Boolean
}
